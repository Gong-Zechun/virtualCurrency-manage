<!DOCTYPE html>
<html>
<head>
    <title>后台登陆系统</title>
    <meta charset="utf-8">
    <link rel="stylesheet" type="text/css" href="/css/style.css">
    <link rel="stylesheet" type="text/css" href="/bootstrap/css/bootstrap.min.css"/>
    <script src="/scripts/jquery/jquery-1.11.3.min.js" type="text/javascript"></script>
    <style>
        body,html{
            width:100%;
            height:100%;
            position:relative;
            font-family: 'Microsoft Yahei','Pingfang SC','Helvetica Neue';

        }
        .login{
            width:450px;
            height:450px;
            position:absolute;
            left:50%;
            top:40%;
            transform: translate(-50%,-50%);
            -webkit-box-shadow: 0px 0px 2px 2px #ededed;
            /*opacity: .5;
            filter:alpha(opacity=50); */
            background:rgba(255, 255, 255, 0.5);
            padding:25px 36px 30px;
            border-radius: 10px;
        }
        .title{
            width:100%;
            height:79px;
            text-align: center;
            font-size:20px;
            font-weight: 700;
            line-height:79px;
            border-bottom: 1px solid #ededed;
            margin-bottom:34px;
        }
        .login input{
            border:none;
            width:100%;
            height:40px;
            border:1px solid #ededed;
            margin-bottom:40px;
            padding-left:20px;
            border-radius: 10px;
        }
    </style>
</head>
<body>
<div id="bg">
    <img class="bg" id="bg_01" src="/image/02.jpg">
##    <img class="bg" id="bg_02" src="/image/03.jpg">
##    <img class="bg" id="bg_03" src="/image/06.jpg">
</div>


<div class="login">
    <p class="title">登录</p>
    <input id="userName" type="text" placeholder="请输入用户名">
    <br>
    <input id="password" type="text"  placeholder="请输入密码"/ class="psword">
    <button id="login" type="button" class="btn btn-danger btn-block" style="margin-top:40px;">登录</button>
</div>

<script src="/scripts/js/common.js" type="text/javascript"></script>
<script>
    $(function(){
        $('.psword').on('click',function(){
            $(this).attr({"type":"password"})
        })

    })

    $("#login").click(function() {
        var userName = $("#userName").val();
        var password = $("#password").val();
        console.log(userName);
        console.log(password);
        if(userName != "" && password != "") {
            $.ajax({
                type: "POST",
                url: "/coin/validate",
                dataType: "json",
                async: false,//同步
                data: {
                    "userName": userName,
                    "password": password
                },
                success: function(data) {
                    console.log(data);
                    if(parseInt(data) == 1) {
                        window.location.href="/coin/price";
                    }else{
                        //这里可以针对“没有此用户”或者“密码错误”两种情况做区分
                        alert("登录失败，没有此用户或者密码错误");
                    }
                },
                error: function(e) { //服务器响应失败处理函数
                    alert("error!!!");
                    console.log(e);
                }
            });

        }else{
            alert("请输入用户名和密码！");
        }

    });

</script>
</body>

</html>